<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
  </head>

  <body>
    <%# 共通ヘッダー部分！ %>
    <header>
      <div class="header-logo">
        <%= link_to("ToDoApp","/") %>
      </div>
      <ul class="header-menus">
        <% if session[:user_id] %>
          <li>
          <%= link_to("マイページ（#{@current_user.name}）","/users/#{@current_user.id}") %>    
          </li>
          <li>
          <%= link_to("タスク一覧","/tasks/index") %>  
          </li>
          <li>
          <%= link_to("新規タスク化","/tasks/new") %>  
          </li>
          <li>
          <%= link_to("ユーザー一覧","/users/index") %>  
          </li>
          <li>
            <%= link_to("ログアウト", "/logout",{method:"post"}) %>
          </li>
        <% else %>
          <li>
          <%= link_to("ToDoAppとは","/about") %>  
          </li>
          <li>
          <%= link_to("新規会員登録","/signup") %>  
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <%# フラッシュメッセージ %>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
