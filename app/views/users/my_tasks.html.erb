<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src= "/default_user.jpg">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>
    <ul class="user-tabs">
      <li><%= link_to("登録したタスク", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("担当のタスク", "/users/#{@user.id}/my_tasks") %></li>
    </ul>
    
    <% @my_tasks.each do |task| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/task_images/#{task.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to("登録ユーザー：#{task.user.name}","/users/#{task.user.id}") %>
          </div>
          <%= link_to(task.content, "/tasks/#{task.id}") %>
        </div>
      </div>
    <% end %>

  </div>
</div>